<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/default_bg_color</item>
    </style>

    <style name="ActivityPromptTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
    </style>
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowAnimationStyle">@null</item>-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->

    <style name="myTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/touming</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->

    <style name="myLoadingProgressBarStyle">
        <item name="android:indeterminateDrawable">@drawable/loading_anim</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxWidth">22dp</item>
        <item name="android:minWidth">22dp</item>
    </style>
</resources>
