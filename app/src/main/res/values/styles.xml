<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--colorPrimaryDark决定了默认状态栏的蓝色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowBackground">@color/default_bg_color</item>
    </style>

    <style name="ClipImageActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActivityPromptTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="MyDetailPage" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/detailpagebgcolor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="myTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/touming</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->

    <style name="myLoadingProgressBarStyle_green">
        <item name="android:indeterminateDrawable">@drawable/loading_anim_green</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxWidth">22dp</item>
        <item name="android:minWidth">22dp</item>
    </style>

    <style name="myLoadingProgressBarStyle_bai">
        <item name="android:indeterminateDrawable">@drawable/loading_anim_bai</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxWidth">22dp</item>
        <item name="android:minWidth">22dp</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <!--背景是否变暗-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">#ffE91E63</item>
        <!--colorAccent兼容低版本，而不是android:colorAccent-->
    </style>
</resources>
