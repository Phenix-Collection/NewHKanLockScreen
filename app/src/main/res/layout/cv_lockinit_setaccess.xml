<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--扫描后, 没有开启辅助功能, 提示用户去开启辅助功能-->

    <TextView
        android:id="@+id/tv_skip"
        android:layout_gravity="right"
        android:textColor="@color/selector_click_bai"
        android:textSize="15sp"
        android:text="跳过"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/icon_arrow"
        android:paddingTop="30dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_cry"
        android:src="@drawable/icon_lockinit_cry"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="170dp"
        android:layout_height="170dp"/>

    <TextView
        android:text="锁屏设置尚未开启"
        android:textSize="24sp"
        android:textColor="@color/bai"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="15dp"
        android:text="不能有效保护锁屏稳定运行, 锁屏功能将很容易失效"
        android:textSize="13sp"
        android:textColor="@color/bai_80"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:text="注: 开启锁屏设置不会影响手机安全"
        android:textSize="13sp"
        android:textColor="@color/bai_80"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvsetaccess"
        android:layout_marginTop="30dp"
        android:text="立即设置"
        android:textSize="15sp"
        android:textColor="@color/bai_80"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_lockinit_btnbg"
        android:layout_width="260dp"
        android:layout_height="46dp"/>
</LinearLayout>