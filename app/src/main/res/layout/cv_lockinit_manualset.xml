<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/default_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#ec6a4a"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <TextView
            android:id="@+id/tv_skip"
            android:layout_gravity="right"
            android:textColor="@color/selector_click_bai"
            android:textSize="15sp"
            android:text="跳过"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/icon_arrow"
            android:paddingTop="30dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_cry_laugh"
            android:src="@drawable/icon_lockinit_cry"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:text="还差一点, 开启下列选项, 保证锁屏稳定运行"
            android:textColor="@color/bai_90"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/manualsetitemslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

    <TextView
        android:id="@+id/tvstartlock_manual"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_lockinit_btnbg3"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/bai"
        android:text="开启锁屏"
        android:layout_gravity="center_horizontal"
        android:layout_width="260dp"
        android:layout_height="46dp"/>
</LinearLayout>