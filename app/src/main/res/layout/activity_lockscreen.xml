<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/pullrefreshlayout"
        android:background="#13354d"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_switch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:textColor="@color/bai"
            android:textSize="13sp"
            android:text="下拉换一换"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/arrow"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_switch"
            android:src="@drawable/ic_pull_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.haokan.hklockscreen.lockscreen.CV_ScrollView
        android:id="@+id/scrollview"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rootview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/lockscreen_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <com.haokan.hklockscreen.lockscreen.CV_RecommendPage_LockScreen
                android:id="@+id/cv_recommendpage"
                android:layout_below="@id/lockscreen_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.haokan.hklockscreen.lockscreen.CV_RecommendPage_LockScreen>
        </RelativeLayout>
    </com.haokan.hklockscreen.lockscreen.CV_ScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/gusture_rl"
        android:background="@color/hei_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_image"
            android:src="@drawable/icon_gusture_lr"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@+id/iv_image"
            android:textColor="@color/bai"
            android:textSize="14sp"
            android:text="左右滑动查看图片"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/gusture_down"
        android:background="@color/hei_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_gusturedown"
            android:src="@drawable/icon_gusture_down"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@+id/iv_gusturedown"
            android:textColor="@color/bai"
            android:textSize="14sp"
            android:text="下拉换图"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/gusture_up"
        android:background="@color/hei_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_gustureup"
            android:src="@drawable/icon_gusture_up"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="180dp"
            android:layout_marginLeft="170dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_above="@+id/iv_gustureup"
            android:textColor="@color/bai"
            android:textSize="14sp"
            android:text="上拉查看精彩推荐"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</FrameLayout>
