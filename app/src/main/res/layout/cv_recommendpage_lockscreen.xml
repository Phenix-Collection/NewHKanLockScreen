<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bg_screen_up">

        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_touming_borderless"
                android:scaleType="center"
                android:src="@drawable/icon_back_white" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="精彩推荐"
                android:textColor="@color/bai"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/backlockscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_backlockscreen_bg"
                android:layout_marginRight="15dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="返回锁屏"
                android:textColor="@color/selector_click_bai"
                android:textSize="12sp" />
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/headercopy"
        android:visibility="gone"
        android:background="@color/bai"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="精彩推荐"
            android:textColor="#555555"
            android:textSize="16sp" />
    </RelativeLayout>
</merge>